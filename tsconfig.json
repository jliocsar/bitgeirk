{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}